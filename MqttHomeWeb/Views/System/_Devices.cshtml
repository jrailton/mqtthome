@using MqttHome.Mqtt
@using MqttHome.Mqtt.Devices
@model MqttHome.MqttHomeController
<div class="panel panel-default">
    <div class="panel-heading">
        <a role="button" data-toggle="collapse" href="#collapse-devices" aria-expanded="true" aria-controls="collapse-devices">
            Devices
        </a>
    </div>
    <div id="collapse-devices" class="panel-collapse collapse in">
        <div class="panel-body">

            @foreach (var device in Model.MqttDevices)
            {
                <div class="col-sm-4 col-lg-3">
                    <div class="panel panel-info">
                        <div class="panel-heading">@device.FriendlyName</div>
                        <div class="panel-body">
                            <div>
                                <label>Last Contact</label>
                                @device.LastMqttMessage.GetPrettyDateHtml()
                            </div>
                            <div>
                                <label>Class</label>
                                @device.DeviceClass
                            </div>
                            <div>
                                <label>Type</label>
                                @device.DeviceType
                            </div>
                            <div>
                                <label>ID</label>
                                @device.Id
                            </div>
                            <div>
                                <label>MQTT Topics</label>
                                @Html.Raw(string.Join("<br />", device.AllTopics))
                            </div>

                            @if (device.LastMqttMessage.HasValue)
                            {

                                @if (device is IStatefulDevice)
                                {
                                    var stateful = device as IStatefulDevice;
                                    <div>
                                        <label>Power On</label>
                                        @stateful.PowerOn
                                    </div>
                                    <div>
                                        @if (stateful.PowerOn ?? true)
                                        {
                                            <button class="btn btn-primary btn-xs btn-success" onclick="SwitchOff('@device.Id')">Switch Off</button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-primary btn-xs btn-danger" onclick="SwitchOn('@device.Id')">Switch On</button>
                                        }
                                    </div>
                                }
                                @if (device is ISensorDevice<ISensorData>)
                                {
                                    var sensor = device as ISensorDevice<ISensorData>;
                                    if (sensor.SensorValues != null)
                                    {
                                        <div>
                                            <label>Sensor Data</label>
                                            @foreach (var pair in sensor.SensorValues)
                                            {
                                                <div>
                                                    <label>@pair.Key</label>
                                                    @pair.Value
                                                </div>
                                            }
                                        </div>
                                    }
                                }
                            }

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
